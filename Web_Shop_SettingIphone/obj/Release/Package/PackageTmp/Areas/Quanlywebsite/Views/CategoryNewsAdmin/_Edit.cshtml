<!--javascrip Logogroups ckfinder  -->
<script language="javascript" type="text/javascript">
    $(function () {
        $("#SelectLogogroup").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#TxtLogogroup").val(fileUrl);
            };
            finder.popup();
        });

        $("#SelectlevelLogogroup").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#TxtlevelLogogroup").val(fileUrl);
            };
            finder.popup();
        });

        $("#SelectlevelLogogroup").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#TxtlevelLogogroup").val(fileUrl);
            };
            finder.popup();
        });
        $("#SelectLogoaddgroup").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#TxtaddLogogroup").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>

