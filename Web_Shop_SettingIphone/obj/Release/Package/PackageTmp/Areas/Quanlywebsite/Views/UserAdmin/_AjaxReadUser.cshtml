
@model IList<Web_Shop_SettingIphone.Models .Data .User_Model>

<div class="panel-body">
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Họ và tên</th>
                <th>Tên đăng nhập</th>
                <th>Thứ tự</th>
                <th>Kích hoạt</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX">
                    <td>@item.Name</td>
                    <td>@item.Username</td>
                    <td>@item.Ord</td>
                    <td>
                        <span class="label label-primary">
                            <a  class="label label-primary btn-active" id="btn-active"
                               data-id="@item.Id">
                                @Html.Raw(item.Active == 1 ? "<strong>Có</strong>" : "<strong>Không</strong>")
                            </a>
                        </span>
                    </td>
                    <td class="function">
                        <a class="btn btn-info btn-xs Edit"  id="Edit" data-id="@item.Id"><i class="fa fa-pencil"></i> Edit </a>
                        <a class="btn btn-danger btn-xs Delete" data-id="@item.Id"  id="Delete"><i class="fa fa-trash-o"></i> Delete </a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
    <!-- /.table-responsive -->
    
</div>

@{ Html.RenderPartial("_EditUsers", Model); }



