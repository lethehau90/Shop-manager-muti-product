@model IList<Web_Shop_SettingIphone.Models.Entity.CommentProduc>
<div class="panel-body">
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th></th>
                <th>Tên Sản phẩm</th>
                <th>Ngày comment</th>
                <th>Số comment</th>
                <th>Kích hoạt</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX">
                    <td  style="text-align:center; width: 5%"><input type="checkbox" name="checkRow" value="bar1" class="dell" index="@item.Id"></td>
                    <td>@Html.Action("_ResurtStringProduct", "CommentProductAdmin", new { Idproduct = item.ProId })</td>
                    <td>@String.Format("{0:dd/MM/yyyy}", item.Date)</td>
                    <td>@Html.Action("_ResurtCountCommentProduct", "CommentProductAdmin", new { Idproduct = item.ProId, Id = item.Id })</td>
                    <td>
                        <span class="label label-primary">
                            <a  class="label label-primary btn-active" id="btn-active"
                               data-id="@item.Id">
                                @Html.Raw(item.Active == 1 ? "<strong>Có</strong>" : "<strong>Không</strong>")
                            </a>
                        </span>
                    </td>
                    <td style="width:30%">
                        <a class="btn btn-info btn-xs view"  id="view" data-id="@item.Id"><i class="fa fa-pencil"></i> Xem Comment </a>
                        <a class="btn btn-info btn-xs Rep" id="Edit'@item.Id'" data-id="@item.Id" data-idproduct="@item.ProId"><i class="fa fa-pencil"></i> Xem trả lời </a>
                        <a class="btn btn-danger btn-xs Delete" data-id="@item.Id"  id="Delete"><i class="fa fa-trash-o"></i> Delete </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <!-- /.table-responsive -->

</div>

@{ Html.RenderPartial("_Edit", Model); }



