<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });

    }
    $(function () {
        createEditor('vi', 'TxtDescription');  //mã code tiếng việt
        createEditor('vi', 'TxtDescriptionEn'); //mã code tiếng anh
    });

</script>



