@{
    ViewBag.Title = "Tin tức - Hỗ trợ";
    Layout = "~/Areas/Quanlywebsite/Views/Shared/_LayoutAdmin_List.cshtml";
}
@model IList<Web_Shop_SettingIphone.Models.Entity.Tintuc>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tin tức - Hỗ trợ</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <span class="listgroup">
                        <i class="fa fa-user"> </i> Quản lý Tin tức - Hỗ trợ
                    </span>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 text-right" id="divright">
                    <input id="box1" type="checkbox" onclick="toggle(this)" />
                    <label for="box1">Tất cả/bỏ chọn</label>
                    <button type="button" id="Deleteall" class="btn btn-primary"><i class="fa fa-save"></i> Xóa đã chọn</button>
                    <button type="button" id="Insert" class="btn btn-primary"><i class="fa  fa-plus-square"></i> Thêm dữ liệu</button>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-lg-9 col-md-9 col-sm-9">
                        <a href="@Url.Action("Read", "TinTucAdmin")" class="btn btn-danger" id="bt-All" data-container="body" data-toggle="popover" data-placement="left" data-original-title="" title="" aria-describedby="popover613464">
                            Tất cả
                        </a>
                        <a href="@Url.Action("Read", "TinTucAdmin", new { filter = "highlight" })" class="btn btn-default" id="bt-highlight" data-container="body" data-toggle="popover" data-placement="left" data-original-title="" title="" aria-describedby="popover613464">
                            Hỗ trợ
                        </a>
                        <a href="@Url.Action("Read", "TinTucAdmin", new { filter = "normal" })" class=" btn btn-default" id="bt-normal" data-container="body" data-toggle="popover" data-placement="left" data-original-title="" title="" aria-describedby="popover613464">
                            Tin tức
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3 text-right" style="padding-top:5px; padding-right:10px">
                        Có @ViewBag.Count Tin tức - Hỗ trợ
                    </div>
                </div>
            </div>
        </div>
        <!-- /.panel-heading -->
        @{ Html.RenderPartial("_AjaxRead"); }

        <!-- /.panel-body -->
    </div>
    <!-- /.col-lg-12 -->
</div>

