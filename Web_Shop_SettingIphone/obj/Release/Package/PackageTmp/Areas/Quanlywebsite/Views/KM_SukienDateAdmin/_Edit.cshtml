<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });

    }
    $(function () {
        createEditor('vi', 'Txtcontent');  //mã code tiếng việt
        createEditor('vi', 'TxtcontentEn'); //mã code tiếng anh
    });

</script>

<script type="text/javascript">
    //chon ngay thang
    $(function () {
        $("#Date_event_start").datepicker({
            changeMonth: true,
            changeYear: true,
            minDate: -0, maxDate: "+12M +10D",
            showOn: "button",
            buttonImage: "/images/calendar.png",
            buttonImageOnly: true,
            buttonText: "Select date"
        });

        $("#Date_event_end").datepicker({
            changeMonth: true,
            changeYear: true,
            minDate: -0, maxDate: "+12M +10D",
            showOn: "button",
            buttonImage: "/images/calendar.png",
            buttonImageOnly: true,
            buttonText: "Select date"
        });
    });

    $(function () {
        $("#Date_event_start").datepicker("option", "dateFormat", "dd/mm/yy");
        $("#Date_event_end").datepicker("option", "dateFormat", "dd/mm/yy");

    });
</script>

