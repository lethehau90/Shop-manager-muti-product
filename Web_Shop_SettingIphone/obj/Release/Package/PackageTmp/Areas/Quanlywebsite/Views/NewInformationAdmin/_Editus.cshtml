<div class="panel-heading" id="update_paner">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <header>
                    <i class="fa fa-user"></i> Quản lý Chức năng trên các thanh tab
                </header>
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse"> </a> <!--collapse-->

            </div>
        </div>
        <div class="portlet-body flip-scroll">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#informationtieude" data-toggle="tab">Tiêu đề Tin</a>
                    </li>

                    <li>
                        <a href="#informationnoidung" data-toggle="tab">Nội dung Bài đăng</a>
                    </li>

                    <li>
                        <a href="#informationSeo" data-toggle="tab">Seo</a>
                    </li>

                    <li>
                        <a href="#informationhinhanh" data-toggle="tab">Hình ảnh</a>
                    </li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="informationtieude">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group hidden">
                                    <label>Id</label>
                                    <input class="form-group easyui-validatebox tb" id="TxtId" data-options="required:true" type="text" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label>Ngôn ngữ Tiếng việt</label>
                                    <input class="form-group easyui-validatebox tb" id="TxtName" data-options="required:true" type="text" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label>Ngôn ngữ Tiếng Anh</label>
                                    <input class="form-group easyui-validatebox tb" id="TxtNameEn" data-options="required:true" type="text" placeholder="">
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="tab-pane fade" id="informationnoidung">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">
                                    <label class="TxtDetail">Nội dung chi tiết tiếng việt</label>
                                    <textarea class="form-control" id="TxtDetail" rows="3"></textarea>
                                </div>
                                <div class="form-group">
                                    <label>Nội dung chi tiết tiếng anh</label>
                                    <textarea class="form-control" id="TxtDetailEn" rows="3"></textarea>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="tab-pane fade" id="informationSeo">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">
                                    <label>Mô tả từ khóa</label>
                                    <textarea class="form-control easyui-validatebox tb" id="TxtDescription" data-options="required:true" rows="3"></textarea>
                                </div>
                                <div class="form-group">
                                    <label>Từ khóa nội dung</label>
                                    <textarea class="form-control easyui-validatebox tb" id="TxtKeyword" data-options="prompt:'Nhập từ khóa người dùng',required:true" rows="3"></textarea>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="tab-pane fade" id="informationhinhanh">
                        
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Up load hình ảnh <span class="Txtimages"></span></label>
                                    <div class="form-group">
                                        <div class="col-md-12 pading-left-Select">
                                            <div class="col-md-3">
                                                <input class="form-group-sm easyui-validatebox tb" id="TxtImage" data-options=" prompt:'hình ảnh',required:true" type="text" placeholder="">
                                            </div>
                                            <div class="col-md-2">
                                                <span class="form-group">
                                                    <button type="button" class="btn btn-white" id="SelectImage">Chọn Ảnh!</button>
                                                </span>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <img class="ShowImgZoom img-responsive" src="/images/no-image.jpg" id="imgShowScren">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="checkbox-inline">Kích hoạt </label>
                            <input id="CKActive" class="checkbox-inline" type="checkbox" checked="checked" value="1">
                        </div>
                    </div>

                </div>
                <div class="clear-fix"></div>
                <div class="padding-form">
                    <div class="form-group">
                        <button type="submit" id="Save" class="btn btn-default"><i class="fa fa-save"></i> Lưu Lại</button>
                        <button type="submit" id="Cancel" class="btn btn-default"><i class="fa fa-times-circle"></i> Hủy bỏ</button>
                    </div>
                </div>
            </div>
            <!-- /.panel-body -->
            
        </div>
    </div>

</div>



