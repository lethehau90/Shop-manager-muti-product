@model IList<Web_Shop_SettingIphone.Models.Entity.Tintuc>
@if (Model.Count > 0)
{
    <div class="col-md-3">
        <aside class="news-detail-widget">
            <h3 class="title"><span>TIN HOT</span></h3>
            <ul class="clearlist" id="newhot">
                @for (int i = 0; i < Model.Count; i++)
                {
                    string url ="";
                    if(Model[i].Type == 1)
                    {
                        url = "tin-tuc";
                    }
                    else
                    {
                        url = "ho-tro";
                    }
                    
                    if (i == 0)
                    {
                        <li class="tin-hot">
                            <div>
                                <div>
                                    
                                    <a href="/@url/@Model[i].Tag" title="@Model[i].Name">
                                        <figure data-feedback="fb:likes, fb:comments">
                                            @if (@Model[i].Hinhanh != "")
                                            {
                                                <img src="@Model[i].Hinhanh" class="img-responsive" alt="@Model[i].Name">
                                            }
                                            else
                                            {
                                                <img src="/images/no-image.jpg" class="img-responsive" alt="@Model[i].Name">
                                            }
                                        </figure>

                                    </a>
                                </div>
                            </div>
                        </li>
                    }
                    else
                    {

                        <li>
                            <a href="/@url/@Model[i].Tag" itemprop="headline" title="@Model[i].Name">@Model[i].Name</a>
                        </li>
                      
                    }
                }


            </ul>


        </aside>


    </div>
}