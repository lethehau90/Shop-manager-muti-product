                                            }
                                            <div class="row">
                                                @if (giacu != Giaban)
                                                {
                                                    <div id="ctshowgiancu" class="col-md-6">
                                                        <div class="detail-price" itemprop="price">
                                                            <span id="ctpricecu">@giacu.ToString("#,000") </span>(Vnđ)
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div id="ctshowgiancu" class="col-md-6 hidden">
                                                        <div class="detail-price" itemprop="price">
                                                            <span id="ctpricecu">@giacu.ToString("#,000") </span>(Vnđ)
                                                        </div>
                                                    </div>
                                                }
                                                <div id="ctshowban" class="col-md-6">
                                                    <div class="detail-price" itemprop="price">
                                                        <span id="ctpriceban">@Giaban.ToString("#,000") </span>(Vnđ)
                                                    </div>
                                                </div>
                                            </div>
