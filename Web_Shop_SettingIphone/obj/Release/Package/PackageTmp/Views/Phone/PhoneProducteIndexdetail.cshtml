                                    @{Html.RenderAction("Mausac", "ScreenProduct", new { tag = Model[0].Tag });}
                                    <div class="verdes-element">
                                        <span class="con-hang">@{Html.RenderAction("_resurtconhannghethang", "ScreenProduct", new { tag = Model[0].Tag });}</span>
                                    </div>
                                    @{
                                        string tinhtrang = Html.Action("_resurtconhannghethang", "ScreenProduct", new { tag = Model[0].Tag }).ToHtmlString();
                                    }
                                    @if (tinhtrang == "còn hàng")
                                    {
                                        <div class="verdes-element">
                                            <span class="het-hang">
                                                <span id="ctslhang">@{Html.RenderAction("_resurtsoluongtrongkho", "ScreenProduct", new { tag = Model[0].Tag });}</span> chiếc
