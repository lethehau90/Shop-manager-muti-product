@{
    Layout = "~/Views/Shared/_LayoutPhonedetail.cshtml";
}
@model IList<Web_Shop_SettingIphone.Models.Entity.DientuMathang>
<title>@ViewBag.title</title>
<meta name="description" content="@ViewBag.Description" />
<meta name="keywords" content="@ViewBag.Keyword" />
<div id="main-content">
    <section class=" product-detail">
        <div class="container">
            <div class="row detail-product" itemscope="" itemtype="http://schema.org/Product">
                <div class="col-sm-4 text-center">
                    <style>
                        .detail-img img {
                            width: 100%;
                        }
                    </style>
                    <div class="detail-img">
                        <figure data-feedback="fb:likes, fb:comments">
                            <div id="hinhanh" class="onepageNav">
