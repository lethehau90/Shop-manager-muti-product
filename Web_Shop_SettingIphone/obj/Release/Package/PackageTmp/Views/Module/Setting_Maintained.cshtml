@model IList<Web_Shop_SettingIphone.Models.Entity.Advertise>
@if (Model.Count > 0)
{
    <h1 style="color: #003366;font-size: 18px;text-align: center;text-transform: uppercase;">
        @Html.Raw(Model[0].Content)
    </h1>
    
    <!-- start 4cot -->
    <div class="container">
        <div class="row center" style="text-align:center">
           <a href="@Model[0].Link" target="@Model[0].Target"><img class="img-responsive" style="display:inline" src="@Model[0].Image" alt="@Model[0].Name" /></a>
        </div>
    </div>
    <!-- end 4cot -->
}
