@model IList<Web_Shop_SettingIphone.Models.Entity.DientuThuoctinh>
@if (Model.Count > 0)
{

    for (int i = 0; i < Model.Count; i++)
    {
        if (i < 10)
        {
            <table class="table">
                <tbody>
                    <tr>
                        <th>@Model[i].Text</th>
                        <td>
                            <p>@Model[i].Value</p>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <div class="collapse" id="more-thongso">

                <table class="table">

                    <tbody>
                        <tr>
                            <th>@Model[i].Text</th>
                            <td>
                                <p>@Model[i].Value</p>
                            </td>

                        </tr>
                    </tbody>
                </table>

            </div>
            <div class="xem-chi-tiet text-center animate">
                <button title="Xem chi tiết cấu hình" class="btn-cart" role="button" data-toggle="collapse" href="#more-thongso" aria-expanded="false" aria-controls="collapseExample">
                    <i class="vta-plus"></i><i class="vta-minus"></i><span class="plus">Xem chi tiết cấu hình</span><span class="minus">Thu gọn chi tiết cấu hình</span>
                </button>
            </div>
        }
    }
}
