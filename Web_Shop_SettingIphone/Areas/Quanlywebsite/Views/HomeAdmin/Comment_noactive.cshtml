@model IList<Web_Shop_SettingIphone.Models.Entity.CommentProduc>
<li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        <i class="fa fa-comment fa-fw"></i>
        
            @if (Model.Count > 0)
            {
                <span style="color:red">
                (@ViewBag.count)
            </span> <i class="fa fa-caret-down"></i>
            }
        </a>
        @if (Model.Count > 0)
        {
            <ul class="dropdown-menu dropdown-messages">
                @foreach (var item in Model)
                {
                    <li>
                        <div style="padding:0px 5px">
                            <span>@Html.Action("_ResurtStringProduct", "CommentProductAdmin", new { Idproduct = item.ProId })</span>
                            <span class="pull-right text-muted">
                                <em>@string.Format("{0:dd/MM/yyyy}", item.Date)</em>
                            </span>
                        </div>
                    </li>
                }

                <li class="divider"></li>

                <li>
                    <a class="text-center" href="/Quanlywebsite/CommentProductAdmin/Read">
                        <strong>Xem tất Comment</strong>
                        <i class="fa fa-angle-right"></i>
                    </a>
                </li>
            </ul>
        }
        <!-- /.dropdown-messages -->
    </li>
