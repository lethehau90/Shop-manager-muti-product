@{
    String TuanTruoc = System.Web.HttpContext.Current.Application["TuanTruoc"].ToString().Replace(".", "");
    if (TuanTruoc == "") { TuanTruoc = "0"; }
    decimal TT = Convert.ToInt64(TuanTruoc);
    String TuanNay = System.Web.HttpContext.Current.Application["TuanNay"].ToString().Replace(".", "");
    decimal TN = Convert.ToInt64(TuanNay);
    decimal phantramtuan;
    if (TT == 0)
    {
        phantramtuan = 100;
    }
    else
    {
        phantramtuan = (TN / TT) * 100;
    }
    String ThangTruoc = System.Web.HttpContext.Current.Application["ThangTruoc"].ToString().Replace(".", "");
    if (ThangTruoc == "") { ThangTruoc = "0"; }
    decimal THT = Convert.ToInt64(ThangTruoc);
    String ThangNay = System.Web.HttpContext.Current.Application["ThangNay"].ToString().Replace(".", "");
    decimal THN = Convert.ToInt64(ThangNay);
    decimal phantramthang;
    if (THT == 0)
    {
        phantramthang = 100;
    }
    else
    {
        phantramthang = Convert.ToDecimal(THN / THT) * 100;
    }
    String NamTruoc = System.Web.HttpContext.Current.Application["NamTruoc"].ToString().Replace(".", "");
    if (NamTruoc == "") { NamTruoc = "0"; }
    decimal NT = Convert.ToInt64(NamTruoc);
    String NamNay = System.Web.HttpContext.Current.Application["NamNay"].ToString().Replace(".", "");
    decimal NN = Convert.ToInt64(NamNay);
    decimal phantramnam;
    if (NT == 0)
    {
        phantramnam = 100;
    }
    else
    {
        phantramnam = (NN / NT) * 100;
    }
}

