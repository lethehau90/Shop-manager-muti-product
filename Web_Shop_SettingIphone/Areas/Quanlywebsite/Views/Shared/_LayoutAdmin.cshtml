<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Quản trị WebSite">
    <meta name="author" content="">
    <link rel="shortcut icon" href="/Images/IconSytem.ico" type="image/x-icon" />
    <title>@ViewBag.Title</title>
    <!-- jQuery -->
    <script src="/Areas/Quanlywebsite/vendor/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/Areas/Quanlywebsite/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- Bootstrap Core CSS -->
    <link href="/Areas/Quanlywebsite/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Areas/Quanlywebsite/vendor/SidebarMenu/css/simple-sidebar.css" rel="stylesheet" />
    <!-- MetisMenu CSS -->
    <link href="/Areas/Quanlywebsite/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <!-- css edit css-->
    <link href="/Areas/Quanlywebsite/Style/Css.css" rel="stylesheet" />
    <link href="/Areas/Quanlywebsite/dist/css/sb-admin-2.css" rel="stylesheet">
    <link href="/Areas/Quanlywebsite/Style/Css.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="/Areas/Quanlywebsite/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="row" style="position: fixed;top: 0; width: 100%; z-index: 2; background-color:#fff">
        <div class="col-lg-12 col-md-12 col-sm-6">
            <div class="form-group">
                <a class="navbar-brand" href="/Quanlywebsite/"><i class="fa fa-group"></i> Quản trị WebSite</a>
                <a class="navbar-brand" id="menu-toggle" href="#" title="Thu nhỏ/Phóng to"><i class="fa fa-laptop"></i></a>
                @{Html.RenderAction("navbar_header", "HomeAdmin");}
            </div>
        </div>
    </div>
    <div class="clear-fix"> </div>
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <!-- /.navbar-top-links -->@{Html.RenderAction("navbar_top_links", "HomeAdmin");}
        </div>
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">

                @RenderBody()
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!--add thư viện -->
    <!-- Metis Menu Plugin JavaScript -->
    <script src="/Areas/Quanlywebsite/vendor/metisMenu/metisMenu.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="/Areas/Quanlywebsite/dist/js/sb-admin-2.js"></script>
    <!--alter toast-->
    <link href="/Areas/Quanlywebsite/vendor/AlertToast/jquery.toast.css" rel="stylesheet" />
    <script src="/Areas/Quanlywebsite/vendor/AlertToast/jquery.toast.js"></script>
</body>
</html>
<IFRAME id="SesionLive" src="/Areas/Quanlywebsite/KeepAlive.aspx" frameBorder=no width=0 height=0 runat="server"></IFRAME>
@{
    Response.AddHeader("Refresh", Convert.ToString(1000 * 30));
}
<!-- modal loading -->
<div class="modal"></div>
<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        var flag = true;
        $("#BtSearchMain").click(function () {
            if ($("#SearchMain").val() == "") {
                $.toast({
                    heading: 'Thông báo',
                    text: 'Bạn chưa nhập ký tự tìm kiếm Sản Phẩm.',
                    icon: 'info',
                    position: 'mid-center',
                    stack: false
                })
                flag = false;
            }

            return flag;
        });
    });


</script>