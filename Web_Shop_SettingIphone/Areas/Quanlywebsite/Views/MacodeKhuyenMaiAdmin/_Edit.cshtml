                                <div class="form-group">
                                    <label>Mã giảm giá</label>
                                    <input class="form-group easyui-validatebox tb" id="TxtMacode" data-options="prompt:'Nhập tên Chi Phí Dịch Vụ Vận Chuyển tiếng việt',required:true" type="text" placeholder="">
