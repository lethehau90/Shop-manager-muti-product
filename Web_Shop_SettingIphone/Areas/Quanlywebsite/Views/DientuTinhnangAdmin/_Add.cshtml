<div class="panel-heading" id="update_paner_add">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <header>
                    <i class="fa fa-user"></i>  Cập nhật danh mục <span class="Editcatelog"></span>
                </header>
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse"> </a> <!--collapse-->

            </div>
        </div>
        <div class="portlet-body flip-scroll">
            <!-- /.panel-heading -->
            <div class="panel-body">
                `
                <!-- Nav tabs -->
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#CategoryNewsaddtieude" data-toggle="tab">Tiêu đề danh mục</a>
                    </li>

                    <li>
                        <a href="#CategoryNewsaddmota" data-toggle="tab">Mô tả</a>
                    </li>

                    <li>
                        <a href="#CategoryNewsaddthietlap" data-toggle="tab">Thiết lập</a>
                    </li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="CategoryNewsaddtieude">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group hidden">
                                    <label>Id</label>
                                    <input class="form-group easyui-validatebox tb" id="TxtaddId" data-options="required:true" type="text" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label>Tên thuộc tính</label>
                                    <input class="form-group easyui-validatebox tb" id="TxtaddName" data-options="required:true" type="text" placeholder="">
                                </div>
                                
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="CategoryNewsaddmota">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">
                                    <label class="Txtaddcontent">Nội dung</label>
                                    <textarea class="form-control" id="Txtaddcontent" rows="3"></textarea>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="tab-pane fade" id="CategoryNewsaddthietlap">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="Selectlevel">Danh mục</label>
                                    @Html.DropDownList("Selectlevel_add", (List<SelectListItem>)ViewBag.Selectlist_lever, "---danh mục gốc---", new { @class = "form-control"})

                                </div>
                                <div class="form-group">
                                    <label class="TxtaddOrd">Sắp xếp</label> <br />
                                    <input class="form-group" type="number" id="TxtaddOrd" value="1" min="1">
                                </div>

                                <div class="form-group">
                                    <label class="checkbox-inline">Kích hoạt </label>
                                    <input id="CKaddActive" class="checkbox-inline" type="checkbox" checked="checked" value="1">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="clear-fix"></div>
                <div class="padding-form">
                    <div class="form-group">
                        <button type="submit" id="Save_add" class="btn btn-default"><i class="fa fa-save"></i> Lưu Lại</button>
                        <button type="submit" id="Cancel_add" class="btn btn-default"><i class="fa fa-times-circle"></i> Hủy bỏ</button>
                    </div>
                </div>
            </div>
            <!-- /.panel-body -->

        </div>
    </div>

</div>

